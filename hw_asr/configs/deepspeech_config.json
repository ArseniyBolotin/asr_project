{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
          "type": "PeakNormalization",
          "args": {}
      },
      {
          "type": "ColoredNoise",
          "args": {}
      }
    ],
    "spectrogram": [
      {
          "type": "FrequencyMasking",
          "args": {
            "freq_mask_param": 10
          }
      },
      {
          "type": "TimeMasking",
          "args": {
            "time_mask_param": 10
          }
      }
    ]
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
        "type": "GroupLengthBatchSampler",
        "args": {
          "batch_size": 32
        }
      },
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_sampler": {
        "type": "GroupLengthBatchSampler",
        "args": {
          "batch_size": 32
        }
      },
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adamw",
    "args": {
      "lr": 3e-5
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam search)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam search)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-4,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
